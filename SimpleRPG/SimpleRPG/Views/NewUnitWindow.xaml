<Window x:Class="SimpleRPG.Views.NewUnitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleRPG.Views"
        mc:Ignorable="d"
        Title="NewUnitWindow" Height="250" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border Padding="5" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Label>Name:</Label>
                    <TextBox Text="{Binding Unit.Name, UpdateSourceTrigger=PropertyChanged}" Width="136"/>
                </StackPanel>
            </Border>
            <Border Padding="5" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Label>Health:</Label>
                    <TextBox Text="{Binding Unit.MaxHealth, UpdateSourceTrigger=PropertyChanged}" Width="136"/>
                </StackPanel>
            </Border>
            <Border Padding="5" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Label>Attack:</Label>
                    <TextBox Text="{Binding Unit.Attack, UpdateSourceTrigger=PropertyChanged}" Width="136"/>
                </StackPanel>
            </Border>
            <Border Padding="5" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Label>Defense:</Label>
                    <TextBox Text="{Binding Unit.Defense, UpdateSourceTrigger=PropertyChanged}" Width="136"/>
                </StackPanel>
            </Border>
            <Border Padding="15" HorizontalAlignment="Center">
                <Button Command="{Binding UpdateCommand}">Create</Button>
            </Border>
        </StackPanel>
    </Grid>
</Window>
